<%- include('../partials/header', { currentPage: 'login', extraStyles: '/css/style.css' }) %>

        <!-- Login Header Section -->
        <section class="hero-section">
            <div class="hero-content-wrapper">
                <div class="hero-text">
                    <h1>Welcome Back</h1>
                    <p>Sign in to your VoyagerAI account to continue</p>
                </div>
            </div>
        </section>

        <!-- Login Form Section -->
        <section class="login-form-section">
            <div class="login-container">
                <div class="login-card">
                    <div class="login-card-header">
                        <h2>Sign In</h2>
                        <p>Enter your credentials to access your account</p>
                    </div>
                    
                    <form id="login-form" action="/users/login" method="post" class="login-form">
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <div class="input-wrapper">
                                <i class="fas fa-envelope input-icon"></i>
                                <input type="email" id="email" name="email" required placeholder="Enter your email" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input type="password" id="password" name="password" required placeholder="Enter your password" />
                            </div>
                        </div>

                        <div class="form-actions">
                            <button class="cta-button" type="submit">
                                <i class="fas fa-sign-in-alt"></i>
                                Sign In
                            </button>
                        </div>
                    </form>
                    
                    <div class="login-footer">
                        <p>Don't have an account? <a href="/users/signup" class="signup-link">Sign up here</a></p>
                    </div>
                </div>
            </div>
        </section>

        </main>
<%- include('../partials/footer.ejs') %>