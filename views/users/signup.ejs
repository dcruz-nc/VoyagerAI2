<%- include('../partials/header', { currentPage: 'signup', extraStyles: '/css/style.css' }) %>

        <!-- Signup Header Section -->
        <section class="hero-section">
            <div class="hero-content-wrapper">
                <div class="hero-text">
                    <h1>Join VoyagerAI</h1>
                    <p>Create your account and start your journey with smart car rentals</p>
                </div>
            </div>
        </section>

        <!-- Signup Form Section -->
        <section class="signup-form-section">
            <div class="signup-container">
                <div class="signup-card">
                    <div class="signup-card-header">
                        <h2>Create Account</h2>
                        <p>Fill in your details to get started</p>
                    </div>
                    
                    <form id="signup-form" action="/users/" method="post" class="signup-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-user input-icon"></i>
                                    <input type="text" id="firstName" name="firstName" required placeholder="Enter your first name" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-user input-icon"></i>
                                    <input type="text" id="lastName" name="lastName" required placeholder="Enter your last name" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <div class="input-wrapper">
                                <i class="fas fa-envelope input-icon"></i>
                                <input type="email" id="email" name="email" required placeholder="Enter your email address" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input type="password" id="password" name="password" required minlength="8" placeholder="Create a strong password" />
                            </div>
                            <small class="password-hint">Password must be at least 8 characters long</small>
                        </div>

                        <div class="form-actions">
                            <button class="cta-button" type="submit">
                                <i class="fas fa-user-plus"></i>
                                Create Account
                            </button>
                        </div>
                    </form>
                    
                    <div class="signup-footer">
                        <p>Already have an account? <a href="/users/login" class="login-link">Sign in here</a></p>
                    </div>
                </div>
            </div>
        </section>

        </main>
<%- include('../partials/footer.ejs') %>