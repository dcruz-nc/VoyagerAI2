<%- include('./partials/header', { currentPage: 'home', extraStyles: '/css/style.css' }) %>            

        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content-wrapper">
                <div class="hero-text">
                    <h1>Find Your Perfect Ride</h1>
                    <p>Discover the perfect vehicle for your journey with our AI-powered matching system. From luxury sedans to rugged SUVs, we've got you covered.</p>
                    <div class="hero-buttons">
                        <a href="/rentals/browse" class="primary-btn">Browse All Vehicles</a>
                        <a href="/docs/mission" class="secondary-btn">Learn More</a>
                    </div>
                </div>
                <div class="hero-visual">
                    <div class="hero-image-placeholder">
                        <i class="fas fa-car"></i>
                    </div>
                </div>
            </div>
        </section>

        <!-- Featured Vehicles Section -->
        <section class="featured-section">
            <div class="section-header">
                <h2>Featured Vehicles</h2>
                <p>Handpicked vehicles for the best driving experience</p>
            </div>
            <div class="vehicles-grid" id="featuredVehiclesGrid">
                <% featuredVehicles.forEach(vehicle => { %>
                    <div class="vehicle-card featured-vehicle-card">
                        <div class="vehicle-image-container">
                            <img src="<%= vehicle.imageUrl %>" alt="<%= vehicle.make + ' ' + vehicle.model %>" class="vehicle-image">
                            <div class="vehicle-overlay">
                                <div class="vehicle-actions">
                                    <button class="quick-view-btn" onclick="quickView('<%= vehicle._id %>')">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="favorite-btn" onclick="toggleFavorite('<%= vehicle._id %>')">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="vehicle-badges">
                                <span class="badge featured-badge">Featured</span>
                                <% if (vehicle.type === 'luxury') { %>
                                    <span class="badge luxury">Luxury</span>
                                <% } else if (vehicle.type === 'sports') { %>
                                    <span class="badge sports">Sports</span>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="vehicle-details">
                            <div class="vehicle-header">
                                <h3 class="vehicle-title"><%= vehicle.make %> <%= vehicle.model %></h3>
                                <div class="vehicle-rating">
                                    <i class="fas fa-star"></i>
                                    <span>4.8</span>
                                </div>
                            </div>
                            
                            <div class="vehicle-specs">
                                <div class="spec-item">
                                    <i class="fas fa-calendar"></i>
                                    <span><%= vehicle.year %></span>
                                </div>
                                <div class="spec-item">
                                    <i class="fas fa-gas-pump"></i>
                                    <span><%= vehicle.mpg %> MPG</span>
                                </div>
                                <div class="spec-item">
                                    <i class="fas fa-users"></i>
                                    <span>5 Seats</span>
                                </div>
                            </div>
                            
                            <div class="vehicle-features">
                                <span class="feature-tag">Automatic</span>
                                <span class="feature-tag">AC</span>
                                <span class="feature-tag">Bluetooth</span>
                            </div>
                            
                            <div class="vehicle-pricing">
                                <div class="price-info">
                                    <span class="price-amount">$<%= vehicle.pricePerDay %></span>
                                    <span class="price-period">/day</span>
                                </div>
                                <div class="price-details">
                                    <span class="deposit-info">$200 deposit</span>
                                </div>
                            </div>
                            
                            <div class="vehicle-actions-bottom">
                                <button class="reserve-btn" onclick="window.location.href='/rentals/payment?vehicleId=<%= vehicle._id %>'">
                                    <i class="fas fa-calendar-check"></i>
                                    Reserve Now
                                </button>
                                <button class="details-btn" onclick="showVehicleDetails('<%= vehicle._id %>')">
                                    <i class="fas fa-info-circle"></i>
                                    Details
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="section-footer">
                <a href="/rentals/browse" class="view-all-btn">View All Vehicles</a>
            </div>
        </section>

        <!-- Benefits Section -->
        <section class="benefits-section">
            <div class="section-header">
                <h2>Why Choose VoyagerAI?</h2>
                <p>Experience the future of car rentals with our innovative approach</p>
            </div>
            <div class="benefits-grid">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <h3>AI-Powered Matching</h3>
                    <p>Our advanced algorithms analyze your preferences, budget, and needs to recommend the perfect vehicle for your journey.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3>Home Test Drives</h3>
                    <p>Schedule a car to come directly to your doorstep. Test drive, rent, or purchase with ultimate convenience.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Secure Transactions</h3>
                    <p>Every booking is encrypted and protected with industry-grade security. Your safety is our priority.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h3>24/7 Support</h3>
                    <p>Round-the-clock customer support to assist you with any questions or concerns about your rental.</p>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="cta-content">
                <h2>Ready to Start Your Journey?</h2>
                <p>Join thousands of satisfied customers who trust VoyagerAI for their transportation needs.</p>
                <div class="cta-buttons">
                    <a href="/users/signup" class="primary-btn">Get Started</a>
                    <a href="/docs/faq" class="secondary-btn">Learn More</a>
                </div>
            </div>
        </section>

        </main>
<%- include('./partials/footer') %>