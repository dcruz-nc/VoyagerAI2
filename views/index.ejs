<%- include('./partials/header', { currentPage: 'home', extraStyles: '/css/style.css' }) %>            
        <section class="featured-cars">
            <h3>Featured Vehicles</h3>
            <div class="card-grid">
                <% featuredVehicles.forEach(vehicle => { %>
                    <div class="car-card">
                        <img src="<%= vehicle.imageUrl %>" alt="<%= vehicle.make + ' ' + vehicle.model %>">
                        <h4><%= vehicle.make %> <%= vehicle.model %></h4>
                        <p><%= vehicle.type %> • $<%= vehicle.pricePerDay %>/day</p>
                    </div>
                <% }) %>
            </div>
        </section>

        <section class="benefits">
            <h3>Why VoyagerAI?</h3>
            <div class="benefit-grid">
                <div class="benefit-card">
                <i class="fas fa-car"></i>
                <h4>AI-Powered Matching</h4>
                <p>Our algorithms recommend the best vehicles for your needs, budget, and style.</p>
                </div>
                <div class="benefit-card">
                <i class="fas fa-home"></i>
                <h4>Home Test Drives</h4>
                <p>Schedule a car to come to you—buy or rent it after a personalized experience.</p>
                </div>
                <div class="benefit-card">
                <i class="fas fa-lock"></i>
                <h4>Secure Transactions</h4>
                <p>Every booking is encrypted and protected with industry-grade security.</p>
                </div>
            </div>
            </section>
        </main>
<%- include('./partials/footer') %>