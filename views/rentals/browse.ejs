<%- include('../partials/header') %>

<section class="search-filter">
  <input type="text" placeholder="Search make, model, or feature..." class="search-input" />
  <button class="filter-btn">🔍 Search</button>
</section>

<section class="car-grid">
  <% if (availableVehicles.length === 0) { %>
    <p>No vehicles currently available for rental.</p>
  <% } else { %>
    <% availableVehicles.forEach(vehicle => { %>
      <div class="car-card">
        <img src="<%= vehicle.imageUrl %>" alt="<%= vehicle.make + ' ' + vehicle.model %>" style="object-fit: contain;">
        <h3><%= vehicle.make %> <%= vehicle.model %></h3>
        <p class="price">$<%= vehicle.pricePerDay %>/day</p>
        <p><%= vehicle.type %> • <%= vehicle.year %> • <%= vehicle.mpg %></p>
        <button class="btn" onclick="window.location.href='/rentals/payment?vehicleId=<%= vehicle._id %>'">Reserve</button>
      </div>
    <% }) %>
  <% } %>
</section>

</main>
<%- include('../partials/footer.ejs') %>
